<%= form_for @article, url: {action: :create},
    html: {class: 'article-form form col-sm-8 col-sm-offset-2'} do |form| %>
  <div class="form-group">
    <label for="article-title-input">Title</label>
    <%= form.text_field :title, id: 'article-title-input', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="article-content-input">Content</label>
    <%= form.text_area :content, id: 'article-content-input', class: 'form-control' %>
  </div>

  <%= form.submit "Publish", class: 'btn btn-default' %>
<% end %>